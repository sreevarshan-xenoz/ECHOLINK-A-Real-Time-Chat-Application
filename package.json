    "@emotion/styled": "^11.14.0",
    "@google/generative-ai": "^0.22.0",
    "@monaco-editor/react": "^4.7.0",
    "@reduxjs/toolkit": "^2.7.0",
    "@supabase/supabase-js": "^2.55.0",
    "@tanstack/react-query": "^5.74.11",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.10.0",
    "@types/three": "^0.180.0",
    "axios": "^1.9.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.9.4",
    "gsap": "^3.13.0",
    "lottie-web": "^5.13.0",
    "openai": "^4.0.0",
    "qrcode.react": "^3.1.0",
    "querystring": "^0.2.1",
    "querystring-es3": "^0.2.1",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.4.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.6.6",
    "react-tsparticles": "^1.42.4",
    "react-virtualized-auto-sizer": "^1.0.25",
    "react-window": "^1.8.11",
    "socket.io-client": "^4.7.2",
    "three": "^0.180.0",
    "tsparticles": "^1.42.4",
    "uuid": "^9.0.1",
    "y-monaco": "^0.1.6",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.26"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && npm run start & npx electron .",
    "electron-pack": "npm run build && npx electron .",
    "setup": "node -e \"console.log('Run setup.bat on Windows or setup.sh on Linux/Mac')\"",
    "dev:all": "concurrently \"cd signaling-server && npm start\" \"cd server && npm start\" \"npm start\"",
    "install:all": "npm install && cd server && npm install && cd ../signaling-server && npm install && cd ..",
    "audit:fix": "npm audit fix && cd server && npm audit fix && cd ../signaling-server && npm audit fix && cd ..",
    "update:browsers": "npx update-browserslist-db@latest",
    "clean": "rimraf node_modules package-lock.json && rimraf server/node_modules server/package-lock.json && rimraf signaling-server/node_modules signaling-server/package-lock.json",
    "prebuild": "npm run update:browsers",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "check-updates": "npx npm-check-updates",
    "update-deps": "npm update && npm audit fix",
    "update-major": "npx npm-check-updates -u && npm install",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "health-check": "npm run type-check && npm run lint && npm run format:check",
    "fix-all": "npm run lint:fix && npm run format && npm run audit:fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@gradio/client": "^1.14.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "assert": "^2.1.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^37.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "https-browserify": "^1.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^30.2.0",
    "net-browserify": "^0.2.4",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.0.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "tls-browserify": "^0.2.2",
    "typescript": "^4.9.5",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  }
}
